<script>
document.addEventListener('DOMContentLoaded', function() {
const loginForm = document.getElementById('login-form');
const loginScreen = document.getElementById('login-screen');
const profileScreen = document.getElementById('profile-screen');
const sheetScreen = document.getElementById('sheet-screen');
const createAccountBtn = document.getElementById('create-account-btn');
const backToProfileBtn = document.getElementById('back-to-profile');
loginForm.addEventListener('submit', function(e) {
e.preventDefault();
loginScreen.classList.add('hidden');
profileScreen.classList.remove('hidden');
profileScreen.classList.add('flex');
});
createAccountBtn.addEventListener('click', function(e) {
e.preventDefault();
// Aqui poderia abrir uma tela de cadastro
// Por enquanto, vamos apenas fazer login direto
loginScreen.classList.add('hidden');
profileScreen.classList.remove('hidden');
profileScreen.classList.add('flex');
});
// Abrir a tela de partitura ao clicar em qualquer card de partitura
const scorecards = document.querySelectorAll('.bg-gray-900.rounded-lg.p-4.border');
scorecards.forEach(card => {
card.addEventListener('click', function() {
profileScreen.classList.add('hidden');
sheetScreen.classList.remove('hidden');
sheetScreen.classList.add('flex');
});
});
// Voltar para o perfil
backToProfileBtn.addEventListener('click', function() {
sheetScreen.classList.add('hidden');
profileScreen.classList.remove('hidden');
profileScreen.classList.add('flex');
});
});
document.addEventListener('DOMContentLoaded', function() {
// Adicionar funcionalidade aos botões de zoom
const zoomInBtn = document.querySelector('.ri-zoom-in-line').parentNode.parentNode;
const zoomOutBtn = document.querySelector('.ri-zoom-out-line').parentNode.parentNode;
const sheetImage = document.querySelector('.bg-gray-800.rounded-lg.overflow-hidden img');
let zoomLevel = 1;
zoomInBtn.addEventListener('click', function() {
if (zoomLevel < 2) {
zoomLevel += 0.1;
sheetImage.style.transform = `scale(${zoomLevel})`;
sheetImage.style.transformOrigin = 'center top';
}
});
zoomOutBtn.addEventListener('click', function() {
if (zoomLevel > 0.5) {
zoomLevel -= 0.1;
sheetImage.style.transform = `scale(${zoomLevel})`;
sheetImage.style.transformOrigin = 'center top';
}
});
});
</script>
</body>
</html>
